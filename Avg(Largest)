#include<stdio.h>
void main()
{
	int i,num;
	int largest;
	int smallest;
	float avg;
	
	printf("Enter a number ");
	scanf("%d",&num);
	if(num>largest){
		largest=num;
	}
	if(num<smallest){
		smallest=num;
	}
	int sum=0;
	sum=sum+num;
	avg=sum/10;
	
	printf("\nLargest number %d",largest);
	printf("\nSmallest number %d",smallest);
	printf("Average number %.2f",avg);
}
